<%- include('../../shared/includes/head', { pageTitle: 'Tutti i prodotti'}) %>
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/product-management.js" defer></script>
</head>
<body>
    <%-  include('../../shared/includes/header') %> 
    <main>
        <h1>Pagina Admin</h1>
        <section>
            <h2>Gestione dei prodotti</h2>
            <p><a class="btn" href="/admin/products/new">Aggiungi un nuovo prodotto</a></p>
        </section>
        <section>
            <ul id="products-grid">
                <% for (const product of products) {%>
                    <li id="product-item-li">
                        <%-  include('./includes/product-item', { product }) %>
                    </li>
                <% } %> 
            </ul>
        </section>
        
        
    </main>
    <%- include('../../shared/includes/footer') %> 
