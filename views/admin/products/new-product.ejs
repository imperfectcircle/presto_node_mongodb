<%- include('../../shared/includes/head', { pageTitle: 'Aggiungi un prodotto'}) %>
<link rel="stylesheet" href="/styles/form.css">
</head>
<body>
    <%-  include('../../shared/includes/header') %> 
    <main>
        <h1>Aggiungi un prodotto</h1>
        <form class="form" action="/admin/products?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
            <div>
                <label for="title">Titolo</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div>
                <label for="image">Immagine</label>
                <input type="file" id="image" name="image" accept="image/*" required>
            </div>
            <div>
                <label for="summary">Riussunto del prodotto</label>
                <input type="text" id="summary" name="summary" required>
            </div>
            <div>
                <label for="price">Prezzo</label>
                <input type="number" id="price" name="price" min="0.01" step="0.01" required>
            </div>
            <div>
                <label for="description">Descrizione</label>
                <textarea type="number" id="description" name="description" rows="7" required></textarea>
            </div>
            <div>
                <button class="btn btn-outline" type="reset">Annulla</button>
                <button class="btn" type="submit">Conferma</button>
            </div>
        </form>
    </main>
    <%- include('../../shared/includes/footer') %> 
