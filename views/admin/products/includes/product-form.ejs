<form class="form" action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
    <div>
        <label for="title">Titolo</label>
        <input type="text" id="title" name="title" value="<%= product.title %>" required>
    </div>
    <div>
        <label for="image">Immagine</label>
        <input type="file" id="image" name="image" accept="image/*"  <% if (imageRequired) { %>required<% } %>>
    </div>
    <div>
        <label for="summary">Riussunto del prodotto</label>
        <input type="text" id="summary" name="summary" value="<%= product.summary %>" required>
    </div>
    <div>
        <label for="price">Prezzo</label>
        <input type="number" id="price" name="price" min="0.01" step="0.01" value="<%= product.price %>" required>
    </div>
    <div>
        <label for="description">Descrizione</label>
        <textarea type="number" id="description" name="description" rows="7" required><%= product.description %></textarea>
    </div>
    <div>
        <button class="btn btn-outline" type="reset">Annulla</button>
        <button class="btn" type="submit">Conferma</button>
    </div>
</form>