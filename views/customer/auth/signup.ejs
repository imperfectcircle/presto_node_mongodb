<%- include('../../shared/includes/head', { pageTitle: 'Registrati'}) %> 
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%-  include('../../shared/includes/header') %> 
    <main>
        <h1>Crea un nuovo utente</h1>
        <form action="/signup" method="post">
            <%- include('../../shared/includes/csrf-token') %>
            <div>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" required>
            </div>
            <div>
                <label for="confirm-email">Conferma email</label>
                <input type="email" name="confirm-email" id="confirm-email" required>
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" minlength="8" required>
            </div>
            <div>
                <label for="confirm-password">Verifica password</label>
                <input type="password" name="confirm-password" id="confirm-password" minlength="8" required>
            </div>
            <hr>
            <div>
                <label for="fullname">Nome e cognome</label>
                <input type="text" name="fullname" id="fullname" required>
            </div>
            <div>
                <label for="street">Indirizzo</label>
                <input type="text" name="street" id="street" required>
            </div>
            <div>
                <label for="cap">CAP</label>
                <input type="text" name="cap" id="cap" minlength="5" maxlength="5" required>
            </div>
            <div>
                <label for="city">Città</label>
                <input type="text" name="city" id="city" required>
            </div>
            <button class="btn">Registrati</button>
            <p id="switch-form"><a href="/login">Sei già registrato?</a></p>
        </form>
    </main>
    <%- include('../../shared/includes/footer') %> 
